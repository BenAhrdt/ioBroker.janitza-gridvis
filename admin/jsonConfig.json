                            "title": "online values",
                            "filter": true,
                            "sort": false,
                            "jsonData": "{\"connection\":{\"address\":\"${globalData.address}\",\"port\":\"${globalData.port}\",\"projectname\":\"${globalData.projectname}\"},\"device\":${data.onlineDevices}}",
                            "command": "getOnlineValues",
                            "alsoDependsOn":[
                                "onlineDevices"
                            ]
                        }
                    ]
                }
            }
        },
