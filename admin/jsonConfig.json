                    "complex": true,
                    "label": "refreshCycle",
                    "tooltip": "refreshCycleTooltipOnline",
                    "sm":2,
                    "default": "*/2 * * * * *"
                  },
                "onlineDeviceTable":{
                    "newLine": true,
                    "type":"table",
                    "sm":12,
                    "allowAddByFilter": true,
                    "items":[
                        {
                            "type": "selectSendTo",
                            "attr": "onlineDevices",
                            "title": "devices",
                            "filter": true,
                            "sort": false,
                            "jsonData": "{\"address\":\"${globalData.address}\",\"port\":\"${globalData.port}\",\"projectname\":\"${globalData.projectname}\"}",
                            "command": "getDevices"
                        },
                        {
                            "type": "selectSendTo",
