{
    "type":"tabs",
    "i18n": true,
    "items":{
        "mainTab":{
            "type": "panel",
            "label": "mainSettings",
            "items": {
                "connectionHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "connectionInformations",
                    "sm": 6
                },
                "conectionInformation":{
                    "newLine":true,
                    "type": "staticText",
                    "label": "justWithRunningAdapter",
                    "hidden":"_alive === true"
                },
                "connectionState":{
                    "newLine":true,
                    "type": "textSendTo",
                    "jsonData": "{\"adress\":\"${data.adress}\",\"port\":\"${data.port}\",\"projectname\":\"${data.projectname}\"}",
                    "command": "getConnectionState",
                    "alsoDependsOn":[
                        "adress",
                        "port",
                        "projectname"
                    ]
                },
                "communicationHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "communicationSettings",
                    "sm": 6
                },
                "adress": {
                    "newLine":true,
                    "type": "text",
                    "label": "address",
                    "default":"192.168.2.50",
                    "sm":2
                },
                "port": {
                    "type": "number",
                    "label": "port",
                    "default": 8080,
                    "sm":1
                },
                "projectname":{
                    "type": "text",
                    "label": "projectname",
                    "defaut":"EnergieMonitoring",
                    "sm": 3
                },
                "timeout": {
                    "newLine": true,
                    "type": "number",
                    "label": "timeout",
                    "min": 500,
                    "max": 5000,
                    "default": 2000,
                    "sm":3
                },
                "reconnectCout": {
                    "type": "number",
                    "label": "number of reconnects before warning",
                    "min": 0,
                    "max": 10,
                    "default": 4,
                    "sm":3
                }
            }
        },
        "onlinevalueTab":{
            "type": "panel",
            "label": "onlinevalues",
            "items": {
                "connectionHeaderOnlineTab": {
                    "newLine": true,
                    "type": "header",
                    "text": "connectionInformations",
                    "sm": 6
                },
                "conectionInformationOnlineTab":{
                    "newLine":true,
                    "type": "staticText",
                    "label": "justWithRunningAdapter",
                    "hidden":"_alive === true"
                },
                "connectionStateOnlineTab":{
                    "newLine":true,
                    "type": "textSendTo",
                    "jsonData": "{\"adress\":\"${data.adress}\",\"port\":\"${data.port}\",\"projectname\":\"${data.projectname}\"}",
                    "command": "getConnectionState",
                    "alsoDependsOn":[
                        "adress",
                        "port",
                        "projectname"
                    ]
                },
                "onlinevalueConfigurationHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "onlinevalueConfiguration",
                    "sm": 12
                },
                "refreshOnlineCronJob": {
                    "newLine": true,
                    "type": "cron",
                    "label": "refreshCycle",
                    "tooltip": "refreshCycleTooltipOnline",
                    "sm":2,
                    "default": "*/2 * * * * *"
                  },
                "onlineDeviceTable":{
                    "newLine": true,
                    "type":"table",
                    "sm":12,
                    "items":[
                        {
                            "type": "selectSendTo",
                            "attr": "onlineDevices",
                            "title": "Gerät",
                            "filter": true,
                            "sort": false,
                            "command": "getDevices"
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "onlineValues",
                            "title": "online value",
                            "filter": true,
                            "sort": false,
                            "jsonData": "${data.onlineDevices}",
                            "command": "getOnlineValues",
                            "alsoDependsOn":[
                                "onlineDevices"
                            ]
                        }
                    ]
                }
            }
        },
        "historicvalueTab":{
            "type": "panel",
            "label": "historicvalues",
            "items": {
                "connectionHeaderHistoricTab": {
                    "newLine": true,
                    "type": "header",
                    "text": "connectionInformations",
                    "sm": 6
                },
                "conectionInformationHirstoricTab":{
                    "newLine":true,
                    "type": "staticText",
                    "label": "justWithRunningAdapter",
                    "hidden":"_alive === true"
                },
                "connectionStateHistoricTab":{
                    "newLine":true,
                    "type": "textSendTo",
                    "jsonData": "{\"adress\":\"${data.adress}\",\"port\":\"${data.port}\",\"projectname\":\"${data.projectname}\"}",
                    "command": "getConnectionState",
                    "alsoDependsOn":[
                        "adress",
                        "port",
                        "projectname"
                    ]
                },
                "historicvalueConfigurationHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "historicvalueConfiguration",
                    "sm": 12
                },
                "refreshHistoricCronJob": {
                    "newLine": true,
                    "type": "cron",
                    "label": "refreshCycle",
                    "tooltip": "refreshCycleTooltipHistoric",
                    "sm":2,
                    "default": "5 */15 * * * *"
                  },
                "historicDeviceTable":{
                    "newLine": true,
                    "type":"table",
                    "sm":12,
                    "items":[
                        {
                            "type": "selectSendTo",
                            "attr": "historicDevices",
                            "title": "Gerät",
                            "filter": true,
                            "sort": false,
                            "command": "getDevices"
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "historicValues",
                            "title": "historic value",
                            "filter": true,
                            "sort": false,
                            "jsonData": "${data.historicDevices}",
                            "command": "getHistoricValues",
                            "alsoDependsOn":[
                                "historicDevices"
                            ]
                        }
                    ]
                }
            }
        }
    }
 }