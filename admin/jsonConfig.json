{
    "type":"tabs",
    "i18n": true,
    "items":{
        "mainTab":{
            "type": "panel",
            "label": "mainSettings",
            "items": {
                "connectionHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "connectionInformations",
                    "sm": 12,
                    "size": 3
                },
                "conectionInformation":{
                    "newLine":true,
                    "type": "staticText",
                    "label": "justWithRunningAdapter",
                    "hidden":"_alive === true"
                },
                "connectionState":{
                    "newLine":true,
                    "type": "textSendTo",
                    "jsonData": "{\"address\":\"${data.address}\",\"port\":\"${data.port}\",\"projectname\":\"${data.projectname}\"}",
                    "command": "getConnectionState",
                    "alsoDependsOn":[
                        "address",
                        "port",
                        "projectname"
                    ]
                },
                "communicationHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "communicationSettings",
                    "sm": 12,
                    "size": 3
                },
                "address": {
                    "newLine":true,
                    "type": "text",
                    "label": "address",
                    "default":"192.168.2.50",
                    "sm":2
                },
                "port": {
                    "type": "number",
                    "label": "port",
                    "default": 8080,
                    "sm":1
                },
                "projectname":{
                    "type": "selectSendTo",
                    "label": "projectname",
                    "default": "No project selected",
                    "sm": 3,
                    "jsonData": "{\"address\":\"${data.address}\",\"port\":\"${data.port}\"}",
                    "command": "getProjects",
                    "alsoDependsOn":[
                        "address",
                        "port"
                    ]
                },
                "timeout": {
                    "newLine": true,
                    "type": "number",
                    "label": "timeout",
                    "min": 500,
                    "max": 5000,
                    "default": 2000,
                    "sm":3
                },
                "reconnectCout": {
                    "type": "number",
                    "label": "number of reconnects before warning",
                    "min": 0,
                    "max": 10,
                    "default": 4,
                    "sm":3
                }
            }
        },
        "onlinevalueTab":{
            "type": "panel",
            "label": "onlinevalues",
            "items": {
                "connectionHeaderOnlineTab": {
                    "newLine": true,
                    "type": "header",
                    "text": "connectionInformations",
                    "sm": 12,
                    "size": 3
                },
                "conectionInformationOnlineTab":{
                    "newLine":true,
                    "type": "staticText",
                    "label": "justWithRunningAdapter",
                    "hidden":"_alive === true"
                },
                "connectionStateOnlineTab":{
                    "newLine":true,
                    "type": "textSendTo",
                    "jsonData": "{\"address\":\"${data.address}\",\"port\":\"${data.port}\",\"projectname\":\"${data.projectname}\"}",
                    "command": "getConnectionState",
                    "alsoDependsOn":[
                        "address",
                        "port",
                        "projectname"
                    ]
                },
                "onlinevalueConfigurationHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "onlinevalueConfiguration",
                    "sm": 12,
                    "size": 3
                },
                "refreshOnlineCronJob": {
                    "newLine": true,
                    "type": "cron",
                    "label": "refreshCycle",
                    "tooltip": "refreshCycleTooltipOnline",
                    "sm":2,
                    "default": "*/2 * * * * *"
                  },
                "onlineDeviceTable":{
                    "newLine": true,
                    "type":"table",
                    "sm":12,
                    "items":[
                        {
                            "type": "selectSendTo",
                            "attr": "onlineDevices",
                            "title": "devices",
                            "filter": true,
                            "sort": false,
                            "command": "getDevices"
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "onlineValues",
                            "title": "online values",
                            "filter": true,
                            "sort": false,
                            "jsonData": "${data.onlineDevices}",
                            "command": "getOnlineValues",
                            "alsoDependsOn":[
                                "onlineDevices"
                            ]
                        }
                    ]
                }
            }
        },
        "historicvalueTab":{
            "type": "panel",
            "label": "historicvalues",
            "items": {
                "connectionHeaderHistoricTab": {
                    "newLine": true,
                    "type": "header",
                    "text": "connectionInformations",
                    "sm": 12,
                    "size": 3
                },
                "conectionInformationHirstoricTab":{
                    "newLine":true,
                    "type": "staticText",
                    "label": "justWithRunningAdapter",
                    "hidden":"_alive === true"
                },
                "connectionStateHistoricTab":{
                    "newLine":true,
                    "type": "textSendTo",
                    "jsonData": "{\"address\":\"${data.address}\",\"port\":\"${data.port}\",\"projectname\":\"${data.projectname}\"}",
                    "command": "getConnectionState",
                    "alsoDependsOn":[
                        "address",
                        "port",
                        "projectname"
                    ]
                },
                "timeBaseHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "timeBaseForHistoricValues",
                    "sm": 12,
                    "size": 3
                },
                "historicTimeBase.today": {
                    "newLine":true,
                    "type": "checkbox",
                    "label": "historicToday",
                    "default": true,
                    "sm": 1
                },
                "historicTimeBase.yesterday": {
                    "type": "checkbox",
                    "label": "historicYesterday",
                    "default": true,
                    "sm": 1
                },
                "historicTimeBase.thisWeek": {
                    "type": "checkbox",
                    "label": "historicThisWeek",
                    "default": false,
                    "sm": 1
                },
                "historicTimeBase.lastWeek": {
                    "type": "checkbox",
                    "label": "historicLastWeek",
                    "default": false,
                    "sm": 1
                },
                "historicTimeBase.thisMonth": {
                    "type": "checkbox",
                    "label": "historicThisMonth",
                    "default": true,
                    "sm": 1
                },
                "historicTimeBase.lastMonth": {
                    "type": "checkbox",
                    "label": "historicLastMonth",
                    "default": true,
                    "sm": 1
                },
                "historicTimeBase.thisQuarter": {
                    "type": "checkbox",
                    "label": "historicThisQuarter",
                    "default": false,
                    "sm": 1
                },
                "historicTimeBase.lastQuarter": {
                    "type": "checkbox",
                    "label": "historicLastQuarter",
                    "default": false,
                    "sm": 1
                },
                "historicTimeBase.thisYear": {
                    "type": "checkbox",
                    "label": "historicThisYear",
                    "default": true,
                    "sm": 1
                },
                "historicTimeBase.lastYear": {
                    "type": "checkbox",
                    "label": "historicLastYear",
                    "default": true,
                    "sm": 1
                },

                "historicvalueConfigurationHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "historicvalueConfiguration",
                    "sm": 12,
                    "size": 3
                },
                "refreshHistoricCronJob": {
                    "newLine": true,
                    "type": "cron",
                    "label": "refreshCycle",
                    "tooltip": "refreshCycleTooltipHistoric",
                    "sm":2,
                    "default": "5 */15 * * * *"
                  },
                "historicDeviceTable":{
                    "newLine": true,
                    "type":"table",
                    "sm":12,
                    "items":[
                        {
                            "type": "selectSendTo",
                            "attr": "historicDevices",
                            "title": "devices",
                            "filter": true,
                            "sort": false,
                            "command": "getDevices"
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "historicValues",
                            "title": "historic values",
                            "filter": true,
                            "sort": false,
                            "jsonData": "${data.historicDevices}",
                            "command": "getHistoricValues",
                            "alsoDependsOn":[
                                "historicDevices"
                            ]
                        }
                    ]
                }
            }
        }
    }
 }